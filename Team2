<script>
  const REVEALED_CLUE = "TEAM 2 CLUE PLACEHOLDER — replace this with your next clue text.";
  document.getElementById("clueText").innerHTML = "<strong>" + REVEALED_CLUE + "</strong>";

  // Twinkle Twinkle (first two phrases; perfect for a puzzle and short)
  // C C G G A A G | F F E E D D C
  const TARGET = ["C4","C4","G4","G4","A4","A4","G4","F4","F4","E4","E4","D4","D4","C4"];

  let ctx = null;
  const freq = {"C4":261.63,"C#4":277.18,"D4":293.66,"D#4":311.13,"E4":329.63,"F4":349.23,"F#4":369.99,"G4":392.00,"G#4":415.30,"A4":440.00,"A#4":466.16,"B4":493.88,"C5":523.25};

  function audio(){ if(!ctx) ctx=new (window.AudioContext||window.webkitAudioContext)(); return ctx; }
  function play(note, ms=180){
    const ac=audio(); const o=ac.createOscillator(); const g=ac.createGain();
    o.type="sine"; o.frequency.value=freq[note]??440;
    const now=ac.currentTime;
    g.gain.setValueAtTime(0.0001,now);
    g.gain.exponentialRampToValueAtTime(0.25,now+0.01);
    g.gain.exponentialRampToValueAtTime(0.0001,now+ms/1000);
    o.connect(g); g.connect(ac.destination);
    o.start(now); o.stop(now+ms/1000+0.02);
  }

  let i=0;
  const statusEl=document.getElementById("status");
  function keyEl(note){ return document.querySelector(`[data-note="${CSS.escape(note)}"]`); }
  function flash(note, cls, duration=420){ const el=keyEl(note); if(!el) return; el.classList.add(cls); setTimeout(()=>el.classList.remove(cls),duration); }

  function press(note){
    play(note);
    const expected=TARGET[i];
    if(note===expected){
      flash(note,"active-green",220);
      i++;
      statusEl.textContent=`Progress: ${i} / ${TARGET.length}`;
      if(i>=TARGET.length) unlock();
      return;
    }
    flash(note,"active-red",450);
    flash(expected,"active-green",700);
  }

  function resetPuzzle(){ i=0; statusEl.textContent=`Progress: ${i} / ${TARGET.length}`; }
  function unlock(){
    document.getElementById("playScreen").style.display="none";
    document.getElementById("doneScreen").style.display="block";
    document.getElementById("pianoBar").style.display="none";
  }
</script>
