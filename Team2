        <div class="black b-fs" data-note="F#4" onclick="press('F#4')">F#</div>
        <div class="black b-gs" data-note="G#4" onclick="press('G#4')">G#</div>
        <div class="black b-as" data-note="A#4" onclick="press('A#4')">A#</div>
